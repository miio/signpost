<h1>Listing issues</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Status</th>
    <th>User</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.title %></td>
    <td><%= issue.body %></td>
    <td><%= issue.status_id %></td>
    <td><%= issue.user_id %></td>
    <td><%= issue.created_at %></td>
    <td><%= issue.updated_at %></td>
    <td><%= issue.email %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
